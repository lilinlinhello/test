<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunda.gps.common.fileUD.mapper.FileUPMapper">
 	<!-- 文档实体与数据库表字段映射 -->
	<resultMap id="documents" type="documents">
		<id column="ID" property="id" />
		<result column="OBJECT_ID" property="objectId" />
		<result column="DOCUMENT_NAME" property="documentName" />
		<result column="DOCUMENT_TYPE" property="documentType" />
		<result column="DOCUMENT_ADDRESS" property="documentAddress" />
		<result column="CREATE_TIME" property="createTime"  jdbcType="DATE" javaType="java.util.Date"/>
		<result column="CREATE_BY" property="createBy" />
		<result column="DELETE_FLAG" property="deleteFlag" />
	</resultMap>
	
	<insert id="saveUpInfos" parameterType="documents">
		INSERT INTO DOCUMENTS(ID,OBJECT_ID,DOCUMENT_NAME,DOCUMENT_TYPE,DOCUMENT_ADDRESS,CREATE_TIME,CREATE_BY,DELETE_FLAG) 
		VALUES(#{id},#{objectId,jdbcType=VARCHAR},#{documentName,jdbcType=VARCHAR},#{documentType,jdbcType=VARCHAR},
			#{documentAddress,jdbcType=VARCHAR},#{createTime,,jdbcType=DATE},#{createBy,jdbcType=VARCHAR},#{deleteFlag})
	</insert>
	
	<!-- 通过ID加载文档名称 -->
	<select id="getFileNameByIds" parameterType="string" resultType="string">
		SELECT D.DOCUMENT_NAME ||':'|| D.ID AS NAME  FROM DOCUMENTS D WHERE D.ID IN 
        <foreach item="ids" index="index" collection="array" 
            open="(" separator="," close=")">
                    #{ids}
        </foreach>
	</select>
	<!-- 通过ID加载文档FTP存放地址 -->
   <select id="getNameByIds" parameterType="string" resultType="string">
		SELECT D.DOCUMENT_ADDRESS AS NAME  FROM DOCUMENTS D WHERE D.ID IN 
        <foreach item="ids" index="index" collection="array" 
            open="(" separator="," close=")">
                    #{ids}
        </foreach>
	</select>
	
</mapper>