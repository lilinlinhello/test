@charset "utf-8";
/* CSS Document */
/*重置*/
*{ font-size:16px;color:#666666;font-family:Arial,'微软雅黑'; margin:0; padding:0;}
img{ display:block;}
a{ text-decoration:none;}
p{font-weight:normal;}
li{ list-style:none}
ul{ list-style:none}
h1{font-weight:normal;}
input{outline:none; border:none;}
i{ font-style:normal;}
/*登录*/
.body{height:1000px;width:100%;margin:0;}
.cover{width: 100%;height: 100%;position: fixed;z-index:-10;_position: absolute;_top: expression(eval(document.body.scrollTop));_left: expression(eval(document.body.scrollLeft));}
.login_bgimg{width:100%;height:100%;border:0;}
.login_background{z-index:1;background-image:url(../images/lodin_ck.png);background-repeat:no-repeat; width:788px; height:779px; margin-left:auto; margin-right:auto; position:relative;}
.login_logo>ul>li>img{display:inline;}
.login_bigbackground{ position:absolute;top:0; left:0; width:100%;}
.login_logo{position:absolute; top:185px;left:190px;}
.login_logo li img{ float:left; margin-right:10px; margin-left:25px;}
.user_sr img{ margin-top:5px;}
.login_logo .password_sr img{ margin:5px 17px 0 30px;}
.password_yz img{ margin:5px 17px 0 30px;}
.password_yz{padding-top:20px; overflow:hidden;}
.login_logo .password_sr{padding-top:20px;}
.login_logo li input{width:260px; height:38px;padding-left:8px; line-height:38px; background-color:transparent; border:1px solid #96a2a7;color:#000;}
.user_sr{padding-top:30px;}
.login_button{ background-image:url(../images/login.png); background-repeat:no-repeat; margin:20px 0 0 65px;}
.login_button a{ width:260px; height:38px; display:block; text-align:center; line-height:38px; color:#fff;}
.forget_pw{margin:0 120px 0 65px;}
.forget a{ font-size:14px;}
.forget a:hover{color:#f63;}
#code{width:150px; margin-bottom:5px; float:left;}
.login_logo>img{margin:0 0 0 20px;}
.login_tips{color:red;}
